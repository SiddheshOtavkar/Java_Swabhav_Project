package com.solidPrinciples.miniproject;

public class Main {
	public static void main(String[] args) {
		// 1. Create an order
        Order order = new Order("ELECTRONICS", 1000);

        IDiscountStrategy discount   = new ElectronicsDiscount();
        IPaymentProcessor payment    = new CreditCardProcessor();
        INotification notifier           = new EmailNotification();

        OrderProcessor processor = new OrderProcessor(discount, payment, notifier);
        processor.process(order);

	}
}
